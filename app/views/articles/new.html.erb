<h1 class="text-center my-4"> Новая статья</h1>

<div class="container">
  <div class="row">
    <div class="col-sm12">

      <%= form_for :article, url: articles_path do |f|  %>
        <p>
          Title <br>
          <%= f.text_field :title %>
        </p>
        <p>
          Текст <br>
          <%= f.text_area :text %>
        </p>
        <p>
          <%= f.submit %>
        </p>
      <% end %>
    </div>
  </div>
</div>
